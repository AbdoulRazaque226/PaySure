<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/nomClient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom Client"
                android:textSize="18sp"
                android:textColor="#333333"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dateDernierAjout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dernier ajout: Hier"
                android:textColor="#888888"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/montantDette"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25 000 FCFA"
                android:textColor="#D32F2F"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginEnd="10dp"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fabSize="mini"
                app:srcCompat="@drawable/ic_edit_note"
                app:backgroundTint="#26A69A"
                app:tint="@android:color/white"
                app:elevation="0dp"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>